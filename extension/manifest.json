{
  "manifest_version": 3,
  "name": "Evenly: Bill Split Extractor",
  "version": "1.0",
  "description": "Extract Walmart or Amazon order details and split among friends and roomates.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://splitshare-q58l.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/evenly-16x16.png",
    "32": "icons/evenly-32x32.png",
    "48": "icons/evenly-48x48.png",
    "128": "icons/evenly-128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.walmart.com/*",
        "https://*.walmart.com/*",
        "https://api.agentql.com/*",
        "https://www.amazon.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Walmart Splitter"
  }
}