{
  "manifest_version": 3,
  "name": "Evenly: Universal Bill Split Extractor",
  "version": "1.0",
  "description": "Extract order details from any e-commerce site and split among friends and roommates.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://splitshare-q58l.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/evenly-16x16.png",
    "32": "icons/evenly-32x32.png",
    "48": "icons/evenly-48x48.png",
    "128": "icons/evenly-128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Evenly: Universal Bill Split Extractor"
  }
}