{
  "manifest_version": 3,
  "name": "Walmart Split Extractor",
  "version": "1.0",
  "description": "Extract Walmart order details using AgentQL.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:3000/*", "https://splitshare-q58l.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.walmart.com/*", 
                "https://*.walmart.com/*",
                "https://api.agentql.com/*","https://www.amazon.com/*", "https://funko.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Walmart Splitter"
  }
}
